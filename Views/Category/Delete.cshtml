@model EcommerceOfficial.ResponseModel.CategoryResponseModel
<style>
    a:hover {
        font-size: 120%;
    }
</style>
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Data.Name</td>
        </tr>

    </tbody>
</table>
<h4>Are you sure you want to delete this category.</h4>
<h4>If you delete this category all the products related to this product wiill be deleted</h4>
<form asp-action="Delete">
    <input type="hidden" asp-for="@Model.Data.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
<form asp-action="Index">
    <input type="hidden" asp-for="@Model.Data.Id" />
    <input type="submit" value="Back" class="btn btn-danger" />
</form>